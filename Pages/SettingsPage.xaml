<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Settings"
    x:Class="infinityTableWebApp.Pages.SettingsPage">
    <GridLayout
        ColumnDefinitions="{OnIdiom Phone='*', Default='*,500'}"
        RowDefinitions="*"
        >
        <Grid RowSpacing="15" RowDefinitions="Auto,*"
              Padding="{OnPlatform iOS='30,60,30,30', Default='30'}">

            <Button 
                Text="Check health"
                FontAttributes="Bold"
                Grid.Row="0"
                SemanticProperties.Hint="pings server to check for 200 response"
                Clicked="OnButtonClicked"
                HorizontalOptions="Center" />
        </Grid>
    </GridLayout>
</ContentPage>
